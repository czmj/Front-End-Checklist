block vars
  - listSections = []

//- Inject all mixins to be able to call these
include ../mixins/mixins


doctype html
<!-- Doctype HTML5 -->
html(lang=content.SITE_LANGUAGE, dir=content.SITE_DIRECTION)
  head

    //- Include the HEAD of the page
    include head
  body

    //- Website wrapper
    .page-wrapper

      .page-main

        //- The main tag is not include in the block main because repeted
        main.s-main#js-main
          block main

    //- Scripts loading
    script(src="/scripts/app.bundle.js" async)
